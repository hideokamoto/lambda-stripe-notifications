{
  "$schema": "https://biomejs.dev/schemas/2.3.6/schema.json",
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true
    }
  },
  "formatter": {
    "enabled": true,
    "formatWithErrors": false,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineEnding": "lf",
    "lineWidth": 100,
    "attributePosition": "auto"
  },
  "files": {
    "includes": ["**/*.ts", "**/*.tsx"],
    "ignoreUnknown": true
  }
}
